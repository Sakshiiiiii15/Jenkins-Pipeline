pipeline{
    agent any
    stages{
        stage("Build"){
            steps{
                echo "Building..."
            }
            post{
                always{
                    mail to: "sakshiranan22@gmail.com",
                    subject: "Build Status Email",
                    body: " Build was successfull"
                }
            }
       }
       stage("Test"){
            steps{
                echo "Testing ..."
            }
        }
        stage("Deploy"){
            steps{
                echo "Deploying ..."
              }
        }
        stage("Complete"){
            steps{
                echo "Completed."
            }
        }
    }
}
